.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  width:750rpx;
  background: url('https://res.paquapp.com/popmartvip/home/nav_bar_bg_2x.png') no-repeat center center;
  background-size:cover;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}


.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 53rpx;
  height: 47rpx;
}

.tab-bar-item view {
  font-size: 20rpx;
  margin-top:8rpx;
}

.tab-bar-item .middle {
  width:101rpx;
  height:105rpx;
  transform:translateY(-55rpx);
}

